<?xml version="1.0"?>
<odoo>

    <record model="ir.ui.view" id="res_course_tree_view">
        <field name="name">Course</field>
        <field name="model">res.course</field>
        <field name="arch" type="xml">
           <tree editable="top">
               <field name="name"/>
               <field name="code"/>
               <field name="trainer_ids" widget="many2many_tags"/>
           </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_res_course">
        <field name="name">Course</field>
        <field name="res_model">res.course</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
        <field name="view_id" ref="res_course_tree_view"/>
    </record>

    <menuitem id="root_training_menu" name="Training" parent="contacts.menu_contacts"/>
    <menuitem action="action_res_course" id="res_course_menu" parent="root_training_menu"/>

</odoo>
